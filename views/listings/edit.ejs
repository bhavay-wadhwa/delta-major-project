<%layout("./layouts/boilerplate.ejs")%>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Edit Listing: <%=listing.title%></h3>
            <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title:</label>
                    <input type="text" name="listing[title]" value="<%=listing.title%>" id="title" class="form-control" required>
                    <div class="invalid-feedback">Enter a valid title</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description:</label>
                    <textarea name="listing[description]" id="description" class="form-control" required><%=listing.description%></textarea>
                    <div class="invalid-feedback">Enter a valid description</div>
                </div>
                <div class="mb-3">
                    Original Listing Image <br>
                    <img  src="<%=originalImageUrl%>" alt="">
                
                </div>
                <div class="row">
                    
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" name="listing[price]" value="<%=listing.price%>" id="price"class="form-control" required>
                            <div class="invalid-feedback">Enter a valid price</div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label for="country" class="form-label">Country:</label>
                            <input type="text" value="<%=listing.country%>" name="listing[country]" id="country"class="form-control" required>
                            <div class="invalid-feedback">Enter a valid country</div>
                        </div>
                    </div>
                </div>


                <div class="mb-3">
                    <label for="location" class="form-label">Location:</label>
                    <input type="text" value="<%=listing.location%>" name="listing[location]" id="location"class="form-control" required>
                    <div class="invalid-feedback">Enter a valid location</div>
                </div>
                <br>
          
                <button class="btn btn=dark edit-btn mt-3">Edit</button>
        
            </form>
        </div>

    </div>


    
</body>
